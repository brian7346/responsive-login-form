primary-color = #8f94fb

* 
  margin 0
  padding 0

body
  font-family: 'Poppins', sans-serif

.container 
  width 100vw
  height 100vh
  display grid
  grid-template-columns repeat(2, 1fr)
  grid-gap 7rem

.phone
  display flex
  justify-content flex-end
  align-items center
  img
    width 500px

.form
  &__wrapper
    display flex
    align-items center
    text-align center

  &__img
    width 100px

  form
    width: 360px

  &__title
    font-size 2.9rem
    text-transform uppercase
    margin 15px 0 
    color #333

  &__forgot
    display block
    text-align right
    text-decoration: none
    color #999
    font-size 14px
    transition .3s
    &:hover
      color #8f94fb

  &__submit
    display block
    width 100%
    height 50px
    border-radius 25px
    margin 1rem 0
    font-size 19px
    outline none
    border none
    color #fff
    background: #4e54c8; /* fallback for old browsers */
    background: -webkit-linear-gradient(to right, #4e54c8, primary-color, #4e54c8); /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(to right, #4e54c8, primary-color, #4e54c8);
    cursor pointer
    font-family: 'Poppins', sans-serif
    background-size 200%
    transition .3s
    text-transform: uppercase
    &:hover
      background-position: right 

.input
  &__container
    display grid
    position relative
    grid-template-columns 7% 93%
    margin 25px 0
    padding 5px 0
    border-bottom: 2px solid #d9d9d9
    &:before
    &:after
      content ''
      position absolute
      bottom -2px
      width 50%
      height 2px
      background primary-color
      transition .3s
    &:after
      right 50%
    &:before
      left 50%

    > div
      position relative

    &.focus
      i
        color primary-color
        transition .3s
      .input__title
        top -10px
        font-size 12px
      &:before
      &:after
        width 50%

  
  &__icon
    display flex
    justify-content center
    align-items center
    position relative
    i
      color: #d9d9d9
  
  &__title
    position absolute
    left 10px
    top 50%
    transform: translateY(-50%)
    color #999
    font-size 18px
    transition .3s

  &__wrapper
    .input
      position absolute
      width: 100%
      height 100%
      left 0
      top 0
      border none
      outline none
      background: none
      padding 0 0.7rem
      font-size 1.2rem
      color #555

.one
  margin-top 0
.two
  margin-bottom 4px